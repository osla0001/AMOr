    <style>
      .hero {
        position: relative;
        width: 100%;
        height: calc(100vh - 80px);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
      }

      .video-placeholder {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 2; /* Video on top */
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .video-placeholder video {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        max-width: 60%;
        max-height: 100%;
        width: auto;
        height: auto;
        object-fit: contain;
      }

      .hero-content {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1; /* Content behind video */
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
        background-color: white;
        /* Background for blend mode to work */
      }

      h2 {
        text-align: center;
        margin-top: 2rem;
      }

      .image_container {
        margin: 0 auto;
        margin-top: 1rem;
        display: flex;
        justify-content: center;
        padding: 0 2rem;
        max-width: 1000px;
      }

      .big_img {
        width: 100%;
        height: auto;
        max-height: 500px;
        object-fit: cover;
        margin-top: 1rem;
      }

      .center {
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin: 0 auto;
        place-self: center;
        text-align: center;
        width: 90ch;
        max-width: 100%;
        padding: 0 1rem;
      }

      a {
        text-decoration: none;
        color: inherit;
        border: 3px solid var(--bun-6);
        display: flex;
        border-radius: 10px;
        width: 180px;
        max-height: 40px;
        padding: 7px 0.5rem;
        margin: 0 10px 0 0;
      }

      a p {
        font-weight: 500;
      }

      a:hover {
        cursor: pointer;
        transition: background-color 0.3s ease;
        background-color: var(--bun-6);
      }

      a:hover p {
        color: white !important;
      }

      .download_text {
        font-size: 12px;
        margin-bottom: 0px;
      }

      .download_title {
        font-size: 1.4rem;
        font-weight: 700;
      }

      a svg {
        width: 40px;
        height: 40px;
        margin-right: 10px;
      }

      a:hover svg {
        fill: white !important;
      }

      a:hover .hover_white {
        fill: white !important;
      }

      .downloads {
        display: flex;
        justify-content: center;
        margin-bottom: 5rem;
        gap: 1rem;
        flex-wrap: wrap;
      }

      .scroll-indicator {
        position: absolute;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        z-index: 3;
        animation: bounce 2s infinite;
        cursor: pointer;
      }

      .scroll-indicator svg {
        stroke: var(--bun-1);
        filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
      }

      @keyframes bounce {
        0%,
        20%,
        50%,
        80%,
        100% {
          transform: translateX(-50%) translateY(0);
        }
        40% {
          transform: translateX(-50%) translateY(-10px);
        }
        60% {
          transform: translateX(-50%) translateY(-5px);
        }
      }

      @media (max-width: 768px) {
        .hero {
          height: calc(100vh - 60px);
        }

        .video-placeholder video {
          max-width: 80%;
        }

        .scroll-indicator {
          bottom: 1.5rem;
        }

        .scroll-indicator svg {
          width: 32px;
          height: 32px;
        }

        .center {
          width: 100%;
        }

        .center h2 {
          font-size: 1.8rem;
        }

        .center p {
          font-size: 0.95rem;
          text-wrap: wrap;
          width: 30ch;
          margin: 0 auto;
        }

        .downloads {
          display: grid;
          grid-template-columns: repeat(2, max-content);
          gap: 1rem;
          padding: 0 1rem;
          max-width: 500px;
          margin: 0 auto 3rem auto;
        }

        a {
          max-width: 100%;
          padding: 10px 0.5rem;
          margin: 0;
          justify-content: center;
        }

        a svg {
          width: 35px;
          height: 35px;
        }

        .download_text {
          font-size: 10px;
        }

        .download_title {
          font-size: 1.1rem;
        }
      }

      @media (max-width: 480px) {
        .hero {
          height: calc(100vh - 50px);
        }

        .video-placeholder video {
          max-width: 90%;
        }

        .scroll-indicator {
          bottom: 1rem;
        }

        .scroll-indicator svg {
          width: 28px;
          height: 28px;
        }

        .center {
        }

        .center h2 {
          font-size: 1.5rem;
          margin-top: 3rem;
        }

        .center p {
          font-size: 0.85rem;
          margin-bottom: 2rem;
        }

        .downloads {
          gap: 0.75rem;
          padding: 0 0.5rem;
        }

        a {
          padding: 8px 0.3rem;
          max-height: 50px;
        }

        a svg {
          width: 30px;
          height: 30px;
          margin-right: 5px;
        }

        .download_text {
          font-size: 9px;
        }

        .download_title {
          font-size: 1rem;
        }
      }
    </style>
  </main>
</Layout>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const scrollIndicator = document.querySelector(".scroll-indicator");
    if (scrollIndicator) {
      scrollIndicator.addEventListener("click", () => {
        const startSection = document.getElementById("start");
        if (startSection) {
          startSection.scrollIntoView({ behavior: "smooth" });
        }
      });
    }
  });
</script>
