---
import Button from "./Button.astro";
import Menu from "./Menu.astro";
---

<header>
  <div>
    <Menu url="/catalog">CATALOG</Menu>
    <Menu url="/map">MAP</Menu>
    <Menu url="/about">ABOUT US</Menu>
  </div>
  <a href="/" class="logo-container">
    <img src="/logo.svg" alt="AMOr logo" class="logo" />
  </a>
  <div>
    <Button color="var(--lettuce-5)" href="/experience">DOWNLOAD</Button>
    <Button color="var(--ketchup-base)" href="/contact">CONTACT US</Button>
  </div>
</header>

<style>
  header {
    background-color: var(--bun-1);
    height: 10%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 2%;
    border-bottom: 2px solid var(--ketchup-3);
  }

  header > div {
    flex: 1;
  }

  header > div:last-child {
    display: flex;
    justify-content: flex-end;
  }

  .logo-container {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .logo {
    height: 60px;
    transition: all 0.3s ease;
  }

  .logo:hover {
    cursor: pointer;
    scale: 1.1;
    transition: all 0.3s ease;
  }
</style>
