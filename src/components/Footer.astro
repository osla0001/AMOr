---
import SoMe from "./SoMe.astro";
---

<footer>
  <div class="somes">
    <SoMe
      color="var(--ketchup-base)"
      href="https://facebook.com/"
      icon="facebook"
    />
    <SoMe
      color="var(--ketchup-base)"
      href="https://instagram.com/"
      icon="instagram"
    />
    <SoMe
      color="var(--ketchup-base)"
      href="https://linkedin.com/"
      icon="linkedin"
    />
    <SoMe color="var(--ketchup-base)" href="https://x.com/" icon="x" />
  </div>
  <div class="center-section">
    <h1>AMOr</h1>
  </div>
  <div class="right-section">
    <img src="/logo.svg" alt="AMOr logo" class="logo" />
    <p style="color: var(--ketchup-base);">AMOr Â© 2025</p>
  </div>
</footer>

<style>
  footer {
    background-color: var(--bun-3);
    height: 120px;
    min-height: 120px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 2%;
    border-top: 2px solid var(--ketchup-3);
  }

  .somes,
  .center-section,
  .right-section {
    flex: 1;
  }

  .center-section {
    display: flex;
    justify-content: center;
  }

  .right-section {
    display: flex;
    align-items: flex-end;
    flex-direction: column;
    justify-content: center;
    gap: 0.5rem;
  }

  .logo {
    height: 60px;
  }

  .somes {
    display: flex;
    gap: 1rem;
  }

  @media (max-width: 768px) {
    footer {
      height: 100px;
      min-height: 100px;
      padding: 0 1rem;
    }

    .logo {
      height: 45px;
    }

    .center-section h1 {
      font-size: 1.5rem;
    }

    .somes {
      gap: 0.5rem;
    }

    .right-section p {
      font-size: 0.8rem;
    }
  }

  @media (max-width: 480px) {
    footer {
      height: auto;
      min-height: 80px;
      flex-direction: column;
      padding: 1rem 0.5rem;
      gap: 1rem;
    }

    .somes,
    .center-section,
    .right-section {
      width: 100%;
      justify-content: center;
      align-items: center;
    }

    .right-section {
      align-items: center;
    }

    .logo {
      height: 35px;
    }

    .center-section h1 {
      font-size: 1.2rem;
    }

    .somes {
      justify-content: center;
    }
  }
</style>
