---
interface Props {
  id: number;
  name: string;
  cuisine: string;
  address: string;
}

const { id, name, cuisine, address } = Astro.props;

// Create URL-friendly name by removing spaces
const urlName = name.replace(/\s+/g, "");
---

<a href={`/catalog/${urlName}`} id={`eatery-${id}`} class="eatery">
  <img src={`/eatery/${id}.png`} alt={name} />
  <h3>{name}</h3>
  <p>{cuisine}</p>
  <p>{address}</p>
</a>

<style>
  .eatery {
    background-color: transparent;
    border-bottom: 1px solid #ccc;
    padding: 10px;
    margin: 5px;
    text-decoration: none;
    color: inherit;
    display: block;
    transition: background-color 0.2s ease;
  }

  .eatery:hover {
    background-color: rgba(0, 0, 0, 0.05);
    cursor: pointer;
  }

  .eatery img {
    height: 250px;
    width: 100%;
    object-fit: cover;
    background-color: aliceblue;
    display: block;
  }
</style>
